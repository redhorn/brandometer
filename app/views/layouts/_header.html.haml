%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "Brand-o-meter", root_path, id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to icon_label("tag", t('.tag')), tag_path
          %li= link_to icon_label("star", t('.rate')), rate_path
          %li= link_to icon_label("fire", t('.battle')), battle_path
          - if signed_in?
            %li#fat-menu.dropdown
              %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
                = t('.account')
                %b.caret
              %ul.dropdown-menu
                %li
                  %span= icon_label('user', current_user.name)
                %li
                  = link_to icon_label('cog', t('.settings')), edit_user_path(current_user)
                %li.divider
                %li
                  = link_to icon_label('signout', t('.signout')), signout_path, method: 'delete'
            - if current_user.admin?
              %li#admin-menu.dropdown
                %a.dropdown-toggle{ href: '#', data: { toggle: 'dropdown' }}
                  = icon_label('lock', 'Admin')
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to icon_label('th-list', 'List all brands'), brands_path
                  %li= link_to icon_label('plus', 'Create new brand'), new_brand_path
                  %li.divider
                  %li= link_to icon_label('user', 'List all users'), users_path
          - else
            %li= link_to icon_label('signin', t('.signin')), signin_path
