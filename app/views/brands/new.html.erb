<% provide(:title, 'Create new brand') %>
<h1>Create new brand</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@brand) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create brand", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
