<div class="center hero-unit">
<% if signed_in? %>
  <h1>Brand-o-meter</h1>

  <h2><%=t '.h2' %></h2>

  <p>
    Begin by either <%= link_to "tagging", tag_path %> or <%= link_to "rating", rate_path %> a brand. Or let them <%= link_to "battle", battle_path %> it out!
  </p>
<% else %>
  <h1><%=t '.h1' %></h1>

  <h2><%=t '.h2' %></h2>

  <%= link_to t('.signupnow'), signup_path, class: "btn btn-large btn-primary" %>
<% end %>
</div>
<div class="row">
  <div class="span4 action-box">
    <a href="<%= tag_path %>">
      <div class="icon-holder">
        <i class="icon-tag"></i>
      </div>
      <div class="action"><%=t '.tag' %></div>
    </a>
  </div>
  <div class="span4 action-box">
    <a href="<%= rate_path %>">
      <div class="icon-holder">
        <i class="icon-star"></i>
      </div>
      <div class="action"><%=t '.rate' %></div>
    </a>
  </div>
  <div class="span4 action-box">
    <a href="<%= battle_path %>">
      <div class="icon-holder">
        <i class="icon-fire"></i>
      </div>
      <div class="action"><%=t '.battle' %></div>
    </a>
  </div>
</div>

