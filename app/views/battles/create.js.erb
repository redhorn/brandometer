$('title').html("Battle <%= @next_brand1.name %> vs. <%= @next_brand2.name %>");
$('h1').html("<%= @next_brand1.name %> vs. <%= @next_brand2.name %>");
$('.battle-action:first').html('<%= logotype_for(@next_brand1) %>').attr("data-brand-id", "<%= @next_brand1.id %>");
