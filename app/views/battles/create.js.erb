$('#battle_brand2').val(<%= @next_brand2.id %>);
var stateObj = { page: "/battle/<%= @next_brand1.uid %>/<%= @next_brand2.uid %>" };
history.pushState(stateObj, "Battle <%= @next_brand1.name %> vs. <%= @next_brand2.name %>", "/battle/<%= @next_brand1.uid %>/<%= @next_brand2.uid %>");
