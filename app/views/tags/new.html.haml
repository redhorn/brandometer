- provide(:title, "#{t('.title')} #{@brand.name}")
%h1= @brand.name

.brand-container
  .logotype-container
    = logotype_for(@brand)

  %h2= t('.h2')
  %p= t('.instructions_html')

  = form_for(@tag, remote: true, html: { class: 'new_tag form-horizontal' }) do |f|
    = render 'shared/error_messages', object: f.object

    = hidden_field_tag 'tag[brand]', @brand.id

    = f.text_field :value, maxlength: 30, autocomplete: 'off', autofocus: 'autofocus'

    = f.submit t('.tag'), class: 'btn btn-large btn-primary'
    = f.button t('.skip'), name: 'skip', value: 'skip', class: 'btn btn-large discourage'
